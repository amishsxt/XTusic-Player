<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/xtusicplayer_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/xtusicplayer_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.XTusicPlayer"
        tools:targetApi="31">
        <activity
            android:name=".Views.LandingPage.MusicPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".Views.LandingPage.LibraryFrag.Playlist.AddMusic.AddMusicActivity"
            android:exported="false" />
        <activity
            android:name=".Views.LandingPage.LibraryFrag.Playlist.CreatePlaylistActivity"
            android:exported="false" />
        <activity
            android:name=".Views.LandingPage.LandingPageActivity"
            android:exported="false" />
        <activity
            android:name=".Views.SplashScreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>